{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "console_title": true,
    "console_title_template": "{{ .Path }}",
    "console_title_style": "path",
    "final_space": true,
    "blocks": [
        {
            "type": "prompt",
            "alignment": "left",
            "segments": [
                {
                    "type": "session",
                    "style": "powerline",
                    "powerline_symbol": "\uE0B0",
                    "foreground": "#4373c2",
                    "background": "#242424",
                    "properties": {
                        "display_host": false,
                        "postfix": ""
                    }
                },
                {
                    "type": "root",
                    "style": "powerline",
                    "powerline_symbol": "\uE0B0",
                    "foreground": "#c792ea",
                    "background": "#242424",
                    "properties": {
                        "prefix": "- root ",
                        "postfix": ""
                    }
                },
                {
                    "type": "time",
                    "style": "powerline",
                    "powerline_symbol": "\uE0B0",
                    "foreground": "#82aaff",
                    "background": "#242424",
                    "properties": {
                        "time_format": "3:04:05 PM",
                        "prefix": ""
                    }
                },
                {
                    "type": "path",
                    "style": "powerline",
                    "powerline_symbol": "\uE0B0",
                    "foreground": "#7fdbca",
                    "background": "#242424",
                    "properties": {
                        "prefix": "\uE5FF ",
                        "style": "full",
                        "folder_separator_icon": "\\",
                        "enable_hyperlink": true
                    }
                },
                {
                    "type": "git",
                    "style": "powerline",
                    "powerline_symbol": "\uE0B0",
                    "foreground": "#3A86FF",
                    "background": "#242424",
                    "properties": {
                        "display_stash_count": true,
                        "display_upstream_icon": true,
                        "prefix": ""
                    }
                },
                {
                    "type": "spotify",
                    "style": "powerline",
                    "powerline_symbol": "\uE0B0",
                    "foreground": "#ffffff",
                    "background": "#1BD760",
                    "properties": {
                        "prefix": "\uF9C6 ",
                        "playing_icon": "\uE602 ",
                        "paused_icon": "\uF8E3 ",
                        "stopped_icon": "\uF04D ",
                        "track_separator": " - "
                    }
                },
                {
                    "type": "exit",
                    "style": "powerline",
                    "powerline_symbol": "\uE0B0",
                    "foreground": "#242424",
                    "background": "#7fdbca",
                    "properties": {
                        "display_exit_code": true,
                        "always_enabled": true,
                        "color_background": true,
                        "error_color": "#c792ea",
                        "prefix": " \ufc8d"
                    }
                }
            ]
        },
        {
            "type": "prompt",
            "alignment": "left",
            "newline": true,
            "segments": [
                {
                    "type": "text",
                    "style": "plain",
                    "foreground": "#c792ea",
                    "properties": {
                        "text": "\u03BB"
                    }
                }
            ]
        }
    ]
}
